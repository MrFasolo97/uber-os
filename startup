
-- Setup paths
local sPath = ".:/bin:/sbin"
shell.setPath( sPath )
shell.setPath = nil
help.setPath( "/rom/help" )

-- Setup aliases
shell.setAlias( "ls", "/bin/ls")
shell.setAlias( "cp", "/bin/cp" )
shell.setAlias( "mv", "/bin/mv" )
shell.setAlias( "rm", "/bin/rm" )
shell.setAlias( "clr", "/bin/clear" )
shell.setAlias( "sh", "/bin/ush")
if term.isColor() then
    shell.setAlias( "background", "bg" )
    shell.setAlias( "foreground", "fg" )
end

shell.run("/uinit")
