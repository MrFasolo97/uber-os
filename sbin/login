local argv = { ... }
--[[if argv[1] == "1" then
  for i = 2, 6 do
    thread.runFile("/sbin/login " .. tostring(i), true, false, 0)
  end
end]]
print("UberOS Login")
while true do
  write("Username: ")
  local username = read()
  write("Password: ")
  local password = read("")
  if users.login(username, password) then
    kernel.log("Logging in as " .. username)
    thread.runFile(users.getShell(users.getUIDByUsername(username)),
        true, true, users.getUIDByUsername(username))
    --term.clear()
    --term.setCursorPos(1, 1)
  else
    print("Invalid login\n")
  end
end
